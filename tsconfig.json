{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react-native",
        "lib": [
            "dom",
            "esnext"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "noEmit": true,
        "target": "es6",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@app/*": [
                "src/app/*"
            ],
            "@screens/*": [
                "src/screens/*"
            ],
            "@redux/*": [
                "src/redux/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ],
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}